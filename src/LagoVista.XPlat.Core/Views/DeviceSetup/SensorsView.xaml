<?xml version="1.0" encoding="utf-8" ?>
<pge:LagoVistaContentPage    xmlns="http://xamarin.com/schemas/2014/forms"
               xmlns:pge="clr-namespace:LagoVista.XPlat.Core;assembly=LagoVista.XPlat.Core"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               Title="Sensors"
               LeftMenu="Back"
               RightMenu="Add"
               AddCommand="{Binding AddSensorCommand}"
               x:Class="LagoVista.XPlat.Core.Views.DeviceSetup.SensorsView">
    <pge:LagoVistaContentPage.MainContent>
        <ListView ItemsSource="{Binding CurrentDevice.SensorCollection}" SelectedItem="{Binding SelectedSensor}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </pge:LagoVistaContentPage.MainContent>
</pge:LagoVistaContentPage>