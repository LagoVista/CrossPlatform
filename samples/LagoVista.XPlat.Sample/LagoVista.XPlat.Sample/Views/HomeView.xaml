<?xml version="1.0" encoding="utf-8" ?>
<pge:LagoVistaContentPage
        xmlns:pge="clr-namespace:LagoVista.XPlat.Core;assembly=LagoVista.XPlat.Core"
        xmlns="http://xamarin.com/schemas/2014/forms" 
        xmlns:ctls="clr-namespace:LagoVista.XPlat.Core.Controls.Common;assembly=LagoVista.XPlat.Core"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        Title="Home View"
        LeftMenu="Menu"
        x:Class="LagoVista.XPlat.Sample.Views.HomeView">
    <pge:LagoVistaContentPage.MainContent >
        <ListView ItemsSource="{Binding MenuOptions}" SelectedItem="{Binding SelectedMenuOption}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ctls:NavigationViewCell Command="{Binding Command}" Text="{Binding Name}" Detail="Hello World" Icon="{Binding FontIconKey}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </pge:LagoVistaContentPage.MainContent>
</pge:LagoVistaContentPage>