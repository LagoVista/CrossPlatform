<?xml version="1.0" encoding="utf-8" ?>
<pge:LagoVistaContentPage
          xmlns:pge="clr-namespace:LagoVista.XPlat.Core;assembly=LagoVista.XPlat.Core"
          xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LagoVista.XPlat.Sample.Views.SplashView">
    <pge:LagoVistaContentPage.MainContent >
        <StackLayout>
            <Image Source="applogo.png" HorizontalOptions="Center" />
            <Label Text="On the Splash Screen, Hold On!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <pge:Button Command="{Binding LoginCommand}" Text="Login" HeightRequest="50" FontSize="Small" />

        </StackLayout>
    </pge:LagoVistaContentPage.MainContent >
</pge:LagoVistaContentPage>