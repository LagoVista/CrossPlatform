<?xml version="1.0" encoding="utf-8" ?>
<pge:LagoVistaContentPage
    xmlns:pge="clr-namespace:LagoVista.XPlat.Core;assembly=LagoVista.XPlat.Core"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LagoVista.XPlat.Sample"
    LeftMenu="Back"
    x:Class="LagoVista.XPlat.Sample.Views.ControlSampleView">
    <pge:LagoVistaContentPage.MainContent >
        <StackLayout>


            <pge:IconButton IconKey="fa-trash" FontSize="Large" TextColor="Red" 
                            Command="{Binding IconButtonTapCommand}" CommandParameter="{Binding MyValue}" />

            <pge:Button Text="Press Me" />
            <Button Text="Or Press Me - Disabled" IsEnabled="False" />
            <Entry Placeholder="Entry enabled, this is place holder" />
            <Entry Placeholder="Entry disabled, this is place holder" IsEnabled="False" />
            <Switch />
            <CheckBox Color="Green"  />
            <Picker SelectedItem="Four">
                <Picker.Items>
                    <x:String>One</x:String>
                    <x:String>Two</x:String>
                    <x:String>Three</x:String>
                    <x:String>Four</x:String>
                    <x:String>Five</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </pge:LagoVistaContentPage.MainContent >
</pge:LagoVistaContentPage>