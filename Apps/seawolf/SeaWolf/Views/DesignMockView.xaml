<?xml version="1.0" encoding="utf-8" ?>
<pge:LagoVistaContentPage x:Class="SeaWolf.Views.DesignMockView"
    xmlns:pge="clr-namespace:LagoVista.XPlat.Core;assembly=LagoVista.XPlat.Core"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    HasToolBar="False"
    xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
    xmlns:ctl="clr-namespace:SeaWolf.Controls;assembly=SeaWolf">
    <pge:LagoVistaContentPage.MainContent>
        <AbsoluteLayout>

            <!-- SITE HEADER -->
            <!--Blue <StackLayout BackgroundColor="#55A9F2">-->
            <!--Orange <StackLayout BackgroundColor="#FFC87F">-->
            <!--Red <StackLayout BackgroundColor="#E95C5D">-->
            <RelativeLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,0.5">
                <Frame HeightRequest="2048" WidthRequest="2048" BackgroundColor="{Binding HeaderBackgroundColor}" VerticalOptions="End" Padding="0">
                    <pge:Image UWPPath="Assets" 
                               FileName="background-overlay-pixel-spaced-3.png" 
                               Opacity="0.25" 
                               Aspect="AspectFit" />
                </Frame>
                <Grid Margin="0,25,0,0" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                        RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
                        >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.25*"></ColumnDefinition>
                        <ColumnDefinition Width="0.25*"></ColumnDefinition>
                        <ColumnDefinition Width="0.25*"></ColumnDefinition>
                        <ColumnDefinition Width="0.25*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <pge:Icon Grid.Column="0" 
                              IconKey="fa-map-marker" 
                              TextColor="{Binding HeaderForegroundColor}"
                              FontSize="36" 
                              Margin="0,20,0,0"
                              HorizontalTextAlignment="Center" />
                    <pge:Icon Grid.Column="1"
                              IconKey="fa-thermometer-half" 
                              TextColor="{Binding HeaderForegroundColor}"
                              FontSize="36" 
                              Margin="0,20,0,0"
                              HorizontalTextAlignment="Center" />
                    <pge:Icon Grid.Column="2" 
                              IconKey="fa-battery-half" 
                              TextColor="{Binding HeaderForegroundColor}"
                              FontSize="36" 
                              Margin="0,20,0,0"
                              HorizontalTextAlignment="Center" />
                    <pge:Icon Grid.Column="3" 
                              IconKey="fa-wifi" 
                              TextColor="{Binding HeaderForegroundColor}"
                              FontSize="36"
                              Margin="0,20,0,0"
                              HorizontalTextAlignment="Center" />
                    <Label Grid.Row="1" Grid.ColumnSpan="4" Text="{Binding SystemStatus}" TextColor="{Binding HeaderForegroundColor}"
                           HorizontalTextAlignment="Center" />
                </Grid>

            </RelativeLayout>
            <!-- SITE HEADER -->

            <!-- SITE FOOTER -->
            <RelativeLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,1,1,0.75">
                <Frame HeightRequest="2048" WidthRequest="2048" BackgroundColor="#93D7F6" VerticalOptions="End" Padding="0">
                    <pge:Image UWPPath="Assets" FileName="background-overlay-pixel-spaced-3.png" Opacity="0.25" Aspect="AspectFit" />
                </Frame>
                <Grid Margin="0,0,0,10" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}" RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="70"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.025*"></ColumnDefinition>
                        <ColumnDefinition Width="0.1*"></ColumnDefinition>
                        <ColumnDefinition Width="0.1*"></ColumnDefinition>
                        <ColumnDefinition Width="0.1*"></ColumnDefinition>
                        <ColumnDefinition Width="0.55*"></ColumnDefinition>
                        <ColumnDefinition Width="0.1*"></ColumnDefinition>
                        <ColumnDefinition Width="0.025*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <pge:IconButton Grid.Row="1" Grid.Column="1"
                          IconKey="fa-home" 
                          TextColor="#212121"
                          FontSize="28" 
                          Margin="0,-10,0,0"
                          Command="{Binding Path=ViewMainCommand}" />
                    <pge:IconButton Grid.Row="1" Grid.Column="2"
                          IconKey="fa-map" 
                          TextColor="#212121"
                          FontSize="28" 
                          Margin="0,-10,0,0"
                          Command="{Binding Path=ViewMapCommand}" />
                    <pge:IconButton Grid.Row="1" Grid.Column="3"
                              IconKey="fa-bell" 
                              TextColor="#212121"
                              FontSize="28" 
                              Margin="0,-10,0,0"
                              Command="{Binding Path=ViewAlertsCommand}" />
                    <StackLayout Grid.Row="1" Grid.Column="4">
                        <pge:Image UWPPath="Assets" FileName="logo-seawolf-grey.png"
                               Aspect="AspectFit"
                               WidthRequest="185"
                               Margin="0,-1,0,0" />
                    </StackLayout>
                    <pge:IconButton Grid.Row="1" Grid.Column="5" 
                              IconKey="fa-bars" 
                              TextColor="#212121"
                              FontSize="28"
                              Margin="0,-10,0,0"
                              Command="{Binding Path=ViewSettingsCommand}" />
                </Grid>

            </RelativeLayout>
            <!-- SITE FOOTER -->

            <!-- VIEW: MAIN -->
            <Frame CornerRadius="25" Padding="0" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" Margin="0,120,0,85" 
                   IsVisible="{Binding Path=MainViewVisible}">
                <StackLayout BackgroundColor="White">
                    <Frame HeightRequest="200"
                           BackgroundColor="#93D7F6" 
                           Padding="0"
                           Margin="0"
                           CornerRadius="0">
                        <AbsoluteLayout>
                            <pge:BindableMap 
                                AbsoluteLayout.LayoutFlags="All" 
                                AbsoluteLayout.LayoutBounds="0,0,1,1"
                                MapType="Street" 
                                MapCenter="{Binding CurrentVeseelLocation}" 
                                GeoFences="{Binding GeoFences}" 
                                />
