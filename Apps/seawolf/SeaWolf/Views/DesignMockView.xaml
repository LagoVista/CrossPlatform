                </StackLayout>
            </Frame>
            <!-- VIEW: MAIN -->

            <!-- VIEW: MAIN -->
            <Frame CornerRadius="25" Padding="0" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" Margin="0,100,0,85" IsVisible="{Binding Path=MapViewVisible}">
                <StackLayout BackgroundColor="White">
                    <pge:BindableMap MapType="Street" MapCenter="{Binding CurrentVeseelLocation}" GeoFences="{Binding GeoFences}" />
                </StackLayout>
            </Frame>
            <!-- VIEW: MAIN -->

            <!-- VIEW: MAIN -->
            <Frame CornerRadius="25" Padding="0" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" Margin="0,100,0,85" IsVisible="{Binding Path=AlertsViewVisible}">
                <StackLayout BackgroundColor="White" Padding="25">
                    <Label Text="Alerts coming soon" FontSize="24" />
                </StackLayout>
            </Frame>
